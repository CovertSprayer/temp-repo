<% layout('layouts/boilerplate') -%>

<%- include('../partials/flash') %>
    <section class="d-flex flex-wrap gap-3 justify-content-center ">

        <% for( let item of products) { %>
            <div class="card" style="width: 18rem;">
                <img src="<%= item.img %>" class="card-img-top" alt="...">
            <span class="badge text-bg-light position-absolute" style="top:33%;left:77%;"><%= item.avgRating %>&star; |<%= item.reviews.length %></span>

                <div class="card-body">
                    <h5 class="card-title d-flex justify-content-between align-items-center">
                        <span><%= item.name %></span>
                        <span class="btn">
                          
                                <!-- <i class="fas fa-heart product-like-button" product-id="<%= item._id %>"></i> -->
                           
                                <i class="far fa-heart product-like-button" product-id="<%= item._id %>"></i>
                           
                        </span>
                    </h5>
                    <h5>$ <%= item.price %>
                    </h5>
                    <p class="card-text">
                        <%= item.desc %>
                    </p>
                    <a href="/products/<%= item._id %>" class="btn btn-primary btn-sm">Buy Now</a>
                </div>
            </div>
        <% } %>
    </section>
<script src="/js/like.js"></script>



    