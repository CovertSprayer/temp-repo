<% layout('layouts/boilerplate') -%>
    <div class="row newForm">
        <div class="col-6 mx-auto">
            <form action="/products/<%= product2._id %>?_method=patch" method="POST">
                <div class="mb-3">
                    <label for="name" class="form-label">Name</label>
                    <input type="text" class="form-control" id="name" aria-describedby="emailHelp"" name="name" value="<%= product2.name %>">
                </div>
                <div class="mb-3">
                    <label for="img" class="form-label">Image</label>
                    <input type="text" class="form-control" id="img"  name="img" value="<%= product2.img %>">
                </div>
                <div class="mb-3">
                    <label for="price" class="form-label">Price</label>
                    <div class="input-group">
                        <span class="input-group-text" style="height: 100%;">$</span>
                        <input type="number" class="form-control" id="price" placeholder="Product Price" name="price" value="<%=  product2.price%>">
                    </div>
                </div>
                <div class="mb-3">
                    <label for="desc" class="form-label">Description</label>
                    <textarea name="desc" id="desc" class="form-control" cols="30" rows="5"><%=  product2.desc%></textarea>
                    <!-- <input type="text" class="form-control" id="desc" placeholder="Product Description" name="desc"> -->
                </div>
                <button type="submit" class="btn btn-primary btn-sm">Save</button>
            </form>
        </div>
    </div>